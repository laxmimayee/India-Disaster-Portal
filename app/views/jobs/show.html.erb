<%- model_class = Job -%>


<div class="page-header">
  <h1><%= @job.company_name %></h1>
</div>
<div class ="row-fluid">
<div class = "span6">
  <%= image_tag @job.avatar.url, :style => "width: 200px; height: 200px;" %>
  </div>
  <div class="span6">
  <h8 class="text-justify"><%= @job.tittle %></h8><hr/>
  <p class="text-justify"><%= @job.hiring_description %></p><br/>
  
  </div>

</div>

 
<dl class="dl-horizontal" style="padding-left: 360px;">
<dt><strong><%= model_class.human_attribute_name(:keys) %>:</strong></dt>
  <dd><%= @job.keys %></dd>

  <dt><strong><%= model_class.human_attribute_name(:company_url) %>:</strong></dt>
  <dd><%= @job.company_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:job_location) %>:</strong></dt>
  <dd><%= @job.job_location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @job.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:display_at) %>:</strong></dt>
  <dd><%= @job.display_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:approve) %>:</strong></dt>
  <dd><%= @job.approve %></dd>
</dl>





<% if current_user %>
<div class="back" style="padding-left: 642px;">
<%= link_to "Back", welcome_dashboard_path, :class => 'btn'%>
</div>
<% else %>
  <%= link_to "Back",jobs_path%>
<% end %>
