    <% if add.approve == "Yes" && add.display_at == "home"%>
    <div class="da-slide1 ">
      <h3><%= add.add_heading %></h3>
      <p><%= truncate add.add_description, length: 160 %></p>
      
      <div class="da-img"><%= image_tag add.avatar.url %></div>
    </div>
     <% end %>
    <% end %>
    
    <nav class="da-arrows">
      <span class="da-arrows-prev"></span>
      <span class="da-arrows-next"></span>
    </nav>
  </div>
  </div>

  </div>
