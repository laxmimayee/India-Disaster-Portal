<div style="width: 900px; height:auto; margin-left: 15%;">

<%- model_class = Job -%>

<div style="width: 900px; height:auto; margin-left: 15%;">


<br/><br/>


  <% @jobs.each do |job| %>
    <% if job.approve == "Yes"%>
      <div class="row-fluid">
        <div class="span2">
        <%= image_tag job.avatar.url, :style => "width: 100px; height: 90px;"%>
        </div>
        <div class="span10">
          <h4><%= job.company_name %></h4>
          <%= truncate job.hiring_description, length: 160 %>
          <%#= job.job %><br/><br/>
          <%=l job.created_at %>&nbsp; by &nbsp;
          <%= job.user.name.upcase %>
          <%= link_to "Read more", job_path(job), :class => "readmore" %><br/><br/>
          <% if user_signed_in? && current_user.role == "admin"%>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_job_path(job), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      job_path(job),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
                      <%#= link_to t('.new', :default => t("helpers.links.new")),
            new_job_path,
            :class => 'btn btn-primary' %>
            <% end %> 
        </div>
        </div>
 <hr/>
 <% end %>
 <% end %>
   