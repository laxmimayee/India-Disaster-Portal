<%- model_class = News -%>


<div class="page-header">
  <h1><%= @news.heading %></h1>
</div>
<div class ="row-fluid">
<%= image_tag @news.avatar.url, :style => "width: 300px; height: 300px;", :ALIGN =>"Left" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @news.description %><br/><br/>



  
<% if current_user %>
<%= link_to "Back",welcome_dashboard_path, :class => "btn"%>
<% else %>
  <%= link_to "Back",news_index_path, :class => "btn"%>
<% end %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_news_path(@news), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              news_path(@news),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>