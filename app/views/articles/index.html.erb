  .readmore{
    padding-left: 250px;
  }
  .articlealign{
padding-bottom: 6px;
padding-left: 160px;
width: 70%;
}
hr {
  width: 80%;
margin: 20px 0;
border: 0;
border-top: 1px solid #46556E;
border-bottom: 1px solid #ffffff;
