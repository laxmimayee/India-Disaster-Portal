
<br/><br/>
<%= form_for @advertisement, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :add_heading, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :add_heading, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :add_description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :add_description, :rows => 10 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :display_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :display_at, options_for_select(%w[ Adds home ]) %><br/>Select Home for Display Your Add at Home page, Or It will display at Adds Page...
    </div>
  </div>


   <div class="control-group">
    <%= f.label :avatar_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar %>
    </div>
  </div>
  <% if user_signed_in? && current_user.role == "admin"%>
  <div class="control-group">
    <%= f.label :approve, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :approve , options_for_select(%w[ No Yes ]) %>
    </div>
  </div>
 <% end %>
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                advertisements_path, :class => 'btn' %>
  </div>
<% end %>
